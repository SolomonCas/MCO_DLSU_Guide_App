<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/color1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_review_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/review_image" />

    <LinearLayout
        android:id="@+id/ll_review_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_review_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/reviewer_placeholder"
            android:textColor="@color/color5"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_review_rate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/review_rate"
                android:textColor="@color/color5" />

            <RatingBar
                android:id="@+id/rb_reviewer_rate"
                style="@android:style/Widget.Material.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:isIndicator="true"
                android:numStars="5" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/color5" />

        <TextView
            android:id="@+id/tv_review_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/review_date_placeholder"
            android:textColor="@color/color5"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>